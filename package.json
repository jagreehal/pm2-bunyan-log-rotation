{
  "name": "pm2-bunyan-log-rotation",
  "version": "1.0.0",
  "description": "This repository contains example of a Node.js app logging using pm2 and bunyan rotating files every minute",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev  --inspect --no-notify --transpile-only --respawn -- src/index.ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "lint": "eslint --ext .js,.ts .",
    "start": "node dist/index.js"
  },
  "keywords": [
    "nodejs",
    "pm2",
    "docker",
    "bunyan"
  ],
  "author": "Jag Reehal",
  "license": "ISC",
  "dependencies": {
    "bunyan": "^1.8.15",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autocannon": "^7.10.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
